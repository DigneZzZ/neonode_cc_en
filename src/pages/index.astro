---
import { DEFAULT_LANG } from "src/consts";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="refresh" content={`0; url=/${DEFAULT_LANG}/`} />
    <script>
      // Используем значение DEFAULT_LANG, переданное Astro
      const lang = `${DEFAULT_LANG}`;
      window.location.replace(`/${lang}/`);
    </script>
  </head>
  <body>
    <p>Redirecting...</p>
  </body>
</html>
